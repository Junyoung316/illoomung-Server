{
  "analysis": {
    "tokenizer": {
      "nori_user_dict": {
        "type": "nori_tokenizer",
        "decompound_mode": "discard",
        "user_dictionary_rules": [
          "일루멍"
        ]
      }
    },
    "filter": {
      "my_address_synonym": {
        "type": "synonym_graph",
        "synonyms": [
          "구래리, 구래동",
          "마산리, 마산동",
          "양촌읍, 양촌면"
        ]
      }
    },
    "analyzer": {
      "korean_index_analyzer": {
        "type": "custom",
        "tokenizer": "nori_user_dict",
        "filter": [
          "lowercase",
          "nori_readingform",
          "nori_part_of_speech"
        ]
      },
      "korean_search_analyzer": {
        "type": "custom",
        "tokenizer": "nori_user_dict",
        "filter": [
          "lowercase",
          "nori_readingform",
          "my_address_synonym",
          "nori_part_of_speech"
        ]
      }
    }
  }
}