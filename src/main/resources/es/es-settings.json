{
  "analysis": {
    "tokenizer": {
      "nori_user_dict": {
        "type": "nori_tokenizer",
        "decompound_mode": "mixed",
        "user_dictionary_rules": [
          "일루멍",
          "구래리",
          "구래동",
          "마산리",
          "마산동",
          "양촌면",
          "양촌읍"
        ]
      }
    },
    "filter": {
      "my_address_synonym": {
        "type": "synonym_graph",
        "synonyms": [
          "구래, 구래리, 구래동",
          "마산, 마산리, 마산동",
          "양촌, 양촌읍, 양촌면"
        ]
      },
      "my_pos_filter": {
        "type": "nori_part_of_speech",
        "stoptags": [
          "E", "IC", "J", "MAG", "MAJ", "MM", "SP", "SSC", "SSO", "SC", "SE", "XPN", "XSA", "XSN", "XSV", "UNA", "NA", "VSV"
        ]
      }
    },
    "analyzer": {
      "korean_index_analyzer": {
        "type": "custom",
        "tokenizer": "nori_user_dict",
        "filter": [
          "lowercase",
          "nori_readingform",
          "my_pos_filter"
        ]
      },
      "korean_search_analyzer": {
        "type": "custom",
        "tokenizer": "nori_user_dict",
        "filter": [
          "lowercase",
          "nori_readingform",
          "my_pos_filter",
          "my_address_synonym"
        ]
      }
    }
  }
}